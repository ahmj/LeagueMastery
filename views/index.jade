extends layout

block content
	div#main.ui.middle.aligned.center.aligned.grid
		div.ui.one.column.stackable.center.aligned.grid
			div.three.wide.column.centered
				img(src="/assets/chest.png")
				h1=title
				div.ui.divider
			div.seven.wide.column
				div.ui.fluid.action.input
					input#summoner(autofocus, type="text", placeholder="Enter your summoner name...")
					div#region.ui.selection.dropdown
						input(type="hidden", name="region")
						i.dropdown.icon
						div.default.text Region
						div.menu
							div.item(selected) NA
							div.item EUNE
							div.item EUW
							div.item KR
							div.item JP
							div.item LAN
							div.item LAS
							div.item BR
							div.item RU
							div.item TR
							div.item OCE
					div#search.ui.green.button Search
				div#error.ui.pointing.red.basic.label.hidden
block scripts
	script(type="text/javascript", src="/js/index.js")